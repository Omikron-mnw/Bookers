<%= form_with model:@book, local:true do |f| %>
  <h2>Editing Book</h2>

    <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@book.errors.count, "error") %></h2>
          <ul>
              <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
          </ul>
        </div>
    <% end %>


    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class="box"><%= f.submit 'Update Book' %></div>

    <div class="link"><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></div>

    <!--<div calss="link2"></div>-->
