  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <!--↓@は必要？-->
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>

    <%= form_with model: @book, local:true do |f| %>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@book.errors.count, "error") %></h2>
          <ul>
              <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
          </ul>
        </div>
      <% end %>

      <h4>Title</h4>
      <div class="item"><%= f.text_field :title %></div>

      <h4>Body</h4>
      <div class="item"><%= f.text_area :body %></div>

      <div class-"box"><%= f.submit 'Create Book' %></div>

    <% end %>

  </body>

